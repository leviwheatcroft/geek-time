{
  "name": "geek-time",
  "version": "1.0.0",
  "description": "time tracking for spreadsheet geeks",
  "main": "dist",
  "author": "Levi Wheatcroft <levi@wht.cr>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf dist && mkdir dist",
    "copyTypes": "copyfiles -u 2 src/types/*.d.ts dist/",
    "buildCli": "webpack --config webpack.cli.js && DEBUG=geektime* node dist/cli.js -r dev -f \"**/*.md\" --pretty",
    "buildPlugin": "webpack --config webpack.plugin.js && cp dist/manifest.js dev/",
    "browsersync": "node browsersync",
    "dev": "yarn run clean && yarn run copyTypes && concurrently --raw \"yarn run npm-watch\" \"yarn run browsersync\" "
  },
  "dependencies": {
    "debug": "^4.1.1",
    "nconf": "^0.10.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "css-loader": "^3.4.2",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "rimraf": "^3.0.2",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "ttypescript": "^1.5.10",
    "typescript": "^3.8.3",
    "typescript-is": "^0.15.0",
    "typescript-transform-paths": "^1.1.14",
    "webpack": "^4.42.1",
    "webpack-bundle-size-analyzer": "^3.1.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  }
}
